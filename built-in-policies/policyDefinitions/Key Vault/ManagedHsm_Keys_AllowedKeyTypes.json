{
  "properties": {
    "displayName": "Azure Key Vault Managed HSM keys should be the specified cryptographic type",
    "policyType": "BuiltIn",
    "mode": "Microsoft.ManagedHSM.Data",
    "description": "Some applications require the use of keys backed by a specific cryptographic type. Enforce a particular cryptographic key type, in your environment.",
    "metadata": {
      "version": "1.0.0",
      "category": "Key Vault"
    },
    "version": "1.0.0",
    "parameters": {
      "allowedKeyTypes": {
        "type": "Array",
        "metadata": {
          "displayName": "Allowed key types",
          "description": "The list of allowed key types"
        },
        "allowedValues": [
          "RSA-HSM",
          "EC-HSM",
          "oct-HSM"
        ],
        "defaultValue": [
          "RSA-HSM",
          "EC-HSM",
          "oct-HSM"
        ]
      },
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "'Audit' allows a non-compliant resource to be created, but flags it as non-compliant. 'Deny' blocks the resource creation. 'Disabled' turns off the policy."
        },
        "allowedValues": [
          "Audit",
          "Deny",
          "Disabled"
        ],
        "defaultValue": "Audit"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.ManagedHSM.Data/managedHsms/keys"
          },
          {
            "field": "Microsoft.ManagedHSM.Data/managedHsms/keys/keyType",
            "notIn": "[parameters('allowedKeyTypes')]"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    },
    "versions": [
      "1.0.0"
    ]
  },
  "id": "/providers/Microsoft.Authorization/policyDefinitions/1fd3b2cc-9904-40fa-b8da-050c02612da9",
  "name": "1fd3b2cc-9904-40fa-b8da-050c02612da9"
}